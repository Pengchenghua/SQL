CREATE TABLE `wms_accounting_stock_detail` (
  `id` bigint(20) NOT NULL DEFAULT '0',
  `product_code` varchar(20) NOT NULL DEFAULT '' COMMENT '商品编码',
 `product_name` varchar(50) NOT NULL DEFAULT '' COMMENT '商品名称',
  `unit` varchar(10) NOT NULL DEFAULT '' COMMENT '计量单位',
	`spec` varchar(10) NOT NULL DEFAULT '' COMMENT '规格',
`pack_qty`	varchar(10) NOT NULL DEFAULT '' COMMENT '件装数',
`category_code`varchar(10) NOT NULL DEFAULT '' COMMENT '部类编码',
`category_name`varchar(10) NOT NULL DEFAULT '' COMMENT '部类名称',
`category_small_code`varchar(10) NOT NULL DEFAULT '' COMMENT '小类编码',
`category_small_name`varchar(10) NOT NULL DEFAULT '' COMMENT '小类名称',
  `location_code` varchar(20) NOT NULL DEFAULT '' COMMENT '地点编码',
  `location_name` varchar(50) NOT NULL DEFAULT '' COMMENT '地点名称',
  `shipper_code` varchar(20) NOT NULL DEFAULT '' COMMENT '货主代码',
   `shipper_name` varchar(30) NOT NULL DEFAULT '' COMMENT '货主名称',
  `biz_time` datetime NOT NULL DEFAULT CURRENT_TIMESTAMP COMMENT '业务时间',
  `posting_time` datetime NOT NULL DEFAULT CURRENT_TIMESTAMP COMMENT '过账时间',
  `before_price` decimal(14,4) NOT NULL DEFAULT '0.0000' COMMENT '调整前单价',
  `before_qty` decimal(14,2) NOT NULL DEFAULT '0.00' COMMENT '调整前数量',
  `before_amt` decimal(14,2) NOT NULL DEFAULT '0.00' COMMENT '调整前金额',
  `after_price` decimal(14,4) NOT NULL DEFAULT '0.0000' COMMENT '调整后单价',
  `after_qty` decimal(14,2) NOT NULL DEFAULT '0.00' COMMENT '调整后数量',
  `after_amt` decimal(14,2) NOT NULL DEFAULT '0.00' COMMENT '调整后金额',
  `tax_rate` decimal(5,3) NOT NULL DEFAULT '0.000' COMMENT '税率（百分）',
  `in_txn_qty` decimal(14,2) NOT NULL DEFAULT '0.00' COMMENT '入库记帐数量',
  `in_txn_price` decimal(14,4) NOT NULL DEFAULT '0.0000' COMMENT '入库记账单价',
  `in_txn_amt` decimal(14,2) NOT NULL DEFAULT '0.00' COMMENT '入库记账金额',
  `out_txn_qty` decimal(14,2) NOT NULL DEFAULT '0.00' COMMENT '出库记帐数量',
  `out_txn_price` decimal(14,4) NOT NULL DEFAULT '0.0000' COMMENT '出库记账单价',
  `out_txn_amt` decimal(14,2) NOT NULL DEFAULT '0.00' COMMENT '出库记账金额',
  `reservoir_area_code` varchar(20) NOT NULL DEFAULT '' COMMENT '库区代码',
  `reservoir_area_name` varchar(32) NOT NULL DEFAULT '' COMMENT '库区名称',
  `create_time` datetime NOT NULL DEFAULT CURRENT_TIMESTAMP,
  `create_by` varchar(20) NOT NULL DEFAULT 'sys',
  `update_time` datetime NOT NULL DEFAULT CURRENT_TIMESTAMP,
  `update_by` varchar(20) NOT NULL DEFAULT 'sys',
  `frozen` tinyint(1) NOT NULL DEFAULT '0' COMMENT '冻结',
  `supplier_code` varchar(10) NOT NULL DEFAULT '' COMMENT '供应商编码'
  `supplier_name` varchar(30) NOT NULL DEFAULT '' COMMENT '收货供应商名称',
 
)COMMENT='库存每日结余表'